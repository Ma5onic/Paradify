{
  "manifest_version": 2,
  "name": "Add a song to your Spotify Playlist",
  "short_name": "Songs to Spotify",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "3.9",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-1.11.1.min.js",
        "scripts/variable.js",
        "content.js"
      ]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Songs to Spotify",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}